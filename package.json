{
  "name": "opencode-swarm-plugin",
  "version": "0.1.0",
  "description": "OpenCode plugin for type-safe swarm coordination with Agent Mail integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "dev": "bun --watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.134",
    "zod": "4.1.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0.0"
  },
  "keywords": [
    "opencode",
    "plugin",
    "swarm",
    "agent-mail",
    "beads",
    "multi-agent"
  ],
  "author": "Joel Hooks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joelhooks/opencode-swarm-plugin"
  }
}
